<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

  <Button
      android:id="@+id/toast_service_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="#FF4B4B"
      android:text="@string/toast_service" />

  <Button
      android:id="@+id/bind_toast_service_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="#FF4B4B"
      android:text="@string/bind_toast_service"/>

  <Button
      android:id="@+id/toast_intent_service_button"
      android:layout_marginTop="50dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/toast_intent_service"/>

</LinearLayout>